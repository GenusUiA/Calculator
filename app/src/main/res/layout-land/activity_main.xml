<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Calculator"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="@color/black"
        android:text="   Calculator"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@id/Calculator"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/input_expression"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="0"
                android:gravity="right|center"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/Calculator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/result"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="0"
                android:background="@android:color/transparent"
                android:textSize="28sp"
                app:layout_constraintTop_toBottomOf="@id/input_expression"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ButtonMC"
                android:padding="0dp"
                android:onClick="ClickMemory"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="MC"/>

            <Button
                android:id="@+id/ButtonMR"
                android:padding="0dp"
                android:onClick="ClickMemory"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="MR"/>

            <Button
                android:id="@+id/ButtonMS"
                android:padding="0dp"
                android:onClick="ClickMemory"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="MS"/>

            <Button
                android:id="@+id/ButtonMPlus"
                android:padding="0dp"
                android:onClick="ClickMemory"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="M+"/>

            <Button
                android:id="@+id/ButtonMDiff"
                android:padding="0dp"
                android:onClick="ClickMemory"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="M-"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/ButtonOneClickClear"
                android:padding="0dp"
                android:onClick="ClickBackspace"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="←"
                />

            <Button
                android:id="@+id/ButtonPlusDiff"
                android:padding="0dp"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:onClick="ClickNumber"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <Button
                android:id="@+id/ButtonClear"
                android:onClick="ClickClear"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:backgroundTint="@color/blue"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="C"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/ButtonFor7"
                android:onClick="ClickNumber"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="7"/>

            <Button
                android:id="@+id/ButtonFor8"
                android:onClick="ClickNumber"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="8"/>

            <Button
                android:id="@+id/ButtonFor9"
                android:layout_width="0dp"
                android:onClick="ClickNumber"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="9"/>

            <Button
                android:id="@+id/ButtonRoot"
                android:onClick="Operation"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="√"/>

            <Button
                android:id="@+id/ButtonReverse"
                android:padding="0dp"
                android:onClick="ClickReverse"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="1/x"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ButtonFor4"
                android:onClick="ClickNumber"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="2"/>

            <Button
                android:id="@+id/ButtonFor5"
                android:onClick="ClickNumber"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="5"/>

            <Button
                android:id="@+id/ButtonFor6"
                android:onClick="ClickNumber"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="6"/>

            <Button
                android:id="@+id/ButtonPlus"
                android:onClick="Operation"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="+"/>

            <Button
                android:id="@+id/ButtonMultiply"
                android:onClick="Operation"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="*"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ButtonFor1"
                android:onClick="ClickNumber"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="1"/>

            <Button
                android:id="@+id/ButtonFor2"
                android:onClick="ClickNumber"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="2"/>

            <Button
                android:id="@+id/ButtonFor3"
                android:onClick="ClickNumber"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="3"/>

            <Button
                android:id="@+id/ButtonDiff"
                android:onClick="Operation"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="-"/>

            <Button
                android:id="@+id/ButtonDivide"
                android:onClick="Operation"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="/"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ButtonFor0"
                android:onClick="ClickNumber"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="0"/>

            <Button
                android:id="@+id/ButtonForDot"
                android:onClick="ClickNumber"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_dark"
                android:text="."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <Button
                android:id="@+id/ButtonForEqual"
                android:onClick="ClickEqual"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:backgroundTint="@color/green"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:text="="/>
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>