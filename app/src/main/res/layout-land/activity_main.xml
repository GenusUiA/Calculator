<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Calculator"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@color/black"
        android:text="Calculator"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/display_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/Calculator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/input_expression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="22sp"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="28sp"
            android:background="@android:color/transparent"
            android:gravity="end"/>

    </LinearLayout>

    <GridLayout
        android:id="@+id/grid_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:rowCount="6"
        android:columnCount="5"
        android:layout_margin="2dp"
        app:layout_constraintTop_toBottomOf="@id/display_row"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 1 строка: память -->
        <Button
            android:id="@+id/ButtonMC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="MC"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickMemory"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonMR"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="MR"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickMemory"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonMS"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="MS"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickMemory"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonMPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="M+"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickMemory"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonMDiff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="M-"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickMemory"
            android:layout_margin="2dp"/>

        <!-- 2 строка: очистка -->
        <Button
            android:id="@+id/ButtonOneClickClear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="←"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickBackspace"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonPlusDiff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="+/-"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonClear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="C"
            android:gravity="center"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickClear"
            android:layout_margin="2dp"/>

        <!--3 строка-->
        <Button
            android:id="@+id/ButtonFor7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="7"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonFor8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="8"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonFor9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="9"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonRoot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:text="√"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="Operation"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonReverse"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:text="1/x"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickReverse"
            android:layout_margin="2dp"/>


        <!--4 строка-->
        <Button
            android:id="@+id/ButtonFor4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="4"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonFor5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="5"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonFor6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="6"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:text="+"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="Operation"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:text="*"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="Operation"
            android:layout_margin="2dp"/>

        <!--5 строка-->
        <Button
            android:id="@+id/ButtonFor1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonFor2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="2"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonFor3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="3"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonDiff"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:text="-"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="Operation"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonDivide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:text="/"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="Operation"
            android:layout_margin="2dp"/>

        <!--6 строка-->
        <Button
            android:id="@+id/ButtonFor0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="0"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonForDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/black"
            android:text="."
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickNumber"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/ButtonForEqual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:backgroundTint="@color/green"
            android:textColor="@color/black"
            android:text="="
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeStepGranularity="2sp"
            android:padding="0dp"
            android:onClick="ClickEqual"
            android:layout_margin="2dp"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>